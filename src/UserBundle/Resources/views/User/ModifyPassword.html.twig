{% extends 'base.html.twig' %}
{% block body %} 

 <div class="ltrMode">
        <h1>Modifier votre mot de passe: </h1>


        <form class="form-signin" name='modifierlemotdepasse' id='modifierlemotdepasse' action='{{ paths('us_update_user_password',{'id':user.id}) }}' method='post' >

            <span style="color:red;"> {{ msg }} </span>

            <div class="form-group">
                <label >Ancien mot de passe</label>
                <input type="password" name="modifierlemotdepasse[ancienmdp]" id="modifierlemotdepasse_ancienmdp" required class="form-control"  >
            </div>

            <div class="form-group">
                <label >Nouveau mot de passe</label>
                <input type="password" name="modifierlemotdepasse[nouveaumdp]" id="modifierlemotdepasse_nouveaumdp" required class="form-control"  >
            </div>

            <div class="form-group">
                <label >Confirmer le nouveau mot de passe</label>
                <input type="password" name="modifierlemotdepasse[confirmnouveaumdp]" id="modifierlemotdepasse_confirmnouveaumdp" required class="form-control"  >
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Valider<i class="fa fa-check" aria-hidden="true"></i></button>
        </form>
 </div>
{% endblock %}
