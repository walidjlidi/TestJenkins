{% extends 'base.html.twig' %}
{% block title %}
    إضافة مستخدم  
{% endblock %}

{% block titlebody %}
    إضافة  مستخدم 
{% endblock %}
{% block body %} 
    <style>
        div.wrapper {
            width: 100%;
            overflow: auto;
        }
        label.checkroles{
            border: 2px inset ;
        }
        input[type=checkbox]
        {

            /* Double-sized Checkboxes */
            -ms-transform: scale(1.5); /* IE */
            -moz-transform: scale(1.5); /* FF */
            -webkit-transform: scale(1.5); /* Safari and Chrome */
            -o-transform: scale(1.5); /* Opera */
            /*  padding: 10px;*/
        }
    </style>
    <form class="form-signin" name='registration' id='registration' action='{{paths('us_create_user')}}' method='post' >
        <span style="color:red;"> {{ msg }} </span>

        <div class="row form-group" >
            <div class="col-md-6">
                <label> اسم المستخدم   </label>
                <input type="text" name="registration[username]" id="registration_username" required class="form-control">
            </div>
        </div>



        <div class="row margin-top-20">
            <div class="form-group">
                <div class="col-md-6 col-sm-12">
                    <label>
                        الإسم
                    </label>
                    <input type="text" name="registration[prenom]" id="registration_prenom" required class="form-control">
                </div>
                <div class="col-md-6 col-sm-12">
                    <label>
                        اللقب
                    </label>
                    <input type="text" name="registration[nom]" id="registration_nom" required class="form-control">
                </div>
            </div>
        </div>


        <div class="row margin-top-20">
            <div class="form-group">
                <div class="col-md-6 col-sm-12">
                    <label>
                        كلمة السر  
                    </label>
                    <input type="password" name="registration[password]" id="registration_password" required class="form-control">
                </div>
                <div class="col-md-6 col-sm-12">
                    <label>
                        إعادة كلمة السر
                    </label>
                    <input type="password" name="registration[passwordconfirm]" id="registration_passwordconfirm" required class="form-control">
                </div>
            </div>
        </div>
        <div class="row margin-top-20">
            <div class="form-group">
                <div class="col-md-6 col-sm-12">
                    <label>
                        البريد الإلكتروني
                    </label>
                    <input type="email" name="registration[email]" id="registration_email" class="form-control">
                </div>
                
                    <div class="col-md-6 col-sm-12">
                        <label>
                            الأدوار
                        </label>
                        <div class="select-group">
                            <select required name="attribuerrole[]" data-placeholder="--حدد--" class="form-control pointer required multi-select chosen-select chosen-rtl" multiple="true">

                                {% for role in roles %}
                                    <option value="{{role.id}}">{{role.nom}}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
              
            </div>


        </div>


        <center>
            <input type="submit" class="btn btn-success btn-lg" value="تآكيد الاضافة"  />
        </center>
        <!-- End Confirmation the add's action -->  
        <!-- going back to the initial list of ministre-->
        <div class="pull-right">
            <button type="button" class="btn btn-primary btn-lg" style="float: right" onclick="window.location = '{{ paths('us_user_index') }}';">
                العودة إلى القائمة 
            </button>
        </div>

    </form>

{% endblock %}
{% block javascript %}
    <script>
        $(document).ready(function () {
            $(".multi-select").chosen({width: "100%"});
        });
    </script>
{% endblock %}