{% extends 'base.html.twig' %}
{% block title %}
    إدارة بيانات حقوق العبور 
{% endblock %}
{% block titlebody %}
    إدارة بيانات حقوق العبور  
{% endblock %}
{% block body %} 


    <table class="table table-striped table-hover table-bordered rtl" id="listeRoutes">
        <thead>
            <tr>
                <th style="direction: ltr!important;">حق العبور </th>
                <th>الملاحظات </th>
                <th>عرض الحق </th>
                <th>الاجراءات </th>
            </tr>
        </thead>
        <tbody>
            {% for route in routes %}
               
                <tr {% if route.new %}class="danger"{% endif %}>
                    <td style="direction: ltr!important;">
                        {{ route.path }}
                    </td>
                    <td >
                        {{ route.intitule }}
                    </td>
                    <td>
                        {% if route.visible==1 %}
                            <i class="fa fa-fw fa-check" style="color:green"></i>
                        {% elseif route.visible==2 %}
                            <i class="fa fa-fw fa-close" style="color:red"></i>
                        {% else %}
                            <i class="fa fa-fw fa-cog"></i>
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-warning" href="{{ paths('us_update_route', { 'id': route.id }) }}">
                            <i class="fa fa-pencil fa-fw"></i> Modifier </a>
                    </td>
                </tr>


            {% endfor %}

            {% for route in nvroutes %}
                <tr class="danger">
                    <td style="direction: ltr!important;">
                        {{ route.path }}
                    </td>
                    <td>
                        {{ route.intitule }}
                    </td>
                    <td>
                        {% if route.visible==2 %}
                            <i class="fa fa-fw fa-check" style="color:green"></i>
                        {% elseif route.visible==1 %}
                            <i class="fa fa-fw fa-close" style="color:red"></i>
                        {% else %}
                            <i class="fa fa-fw fa-cog"></i>
                        {% endif %}
                    </td>
                    <td>

                        <a class="btn btn-warning" href="{{ paths('us_update_route', { 'id': route.id }) }}">
                            <i class="fa fa-pencil fa-fw"></i> Modifier </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
    <br/>
    <a onclick="exports([3], document.title, 'listeRoles')">
        <img class="pull-left" src={{asset("assets/images/excel-format.png")}}>
    </a>
{% endblock %}
{% block javascripts %}
    <script>


        $(document).ready(function () {

            $('#listeRoutes').DataTable({
                "language": {
                    "sLengthMenu": "عرض _MENU_ تسجيل",
                    "zeroRecords": "لا يوجد سجلات",
                    "info": "hide",
                    "infoEmpty": "عرض 0 إلى 0 من 0 إدخالات",
                    "sInfo": "عرض_START_ إلى _END_ من _TOTAL_ إدخالات",
                    "infoFiltered": "",
                    "sSearch": "<span class='input-group-add-on'> <i class='fa fa-search'></i></span> &nbsp;",
                    "oPaginate": {
                        "sFirst": "الأول",
                        "sLast": "الأخير",
                        "sNext": "التالي",
                        "sPrevious": "السابق"
                    }
                }
            });

        });
    </script>
{% endblock %}